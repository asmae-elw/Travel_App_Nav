<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.hotellist.menu_endroits">

    <Button
        android:id="@+id/button_hotel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="choose Hotel"></Button>

    <Button
        android:id="@+id/button_restau"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="choose Restau"
        android:layout_below="@+id/button_hotel"
        android:layout_centerInParent="true"
        ></Button>

    <Button
        android:id="@+id/button_site"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="choose site"
        android:layout_below="@+id/button_restau"
        android:layout_centerInParent="true"
        ></Button>

</RelativeLayout>